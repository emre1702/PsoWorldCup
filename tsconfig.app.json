/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/out-tsc",
    "useDefineForClassFields": false,
    "types": [],
    "target": "ES2022"
  },
  "files": ["src/main.ts", "src/main.server.ts"],
  "include": [
    "src/**/*.d.ts",
    "src/app/services/**/*.ts",
    "src/app/pages/**/*.ts",
    "src/app/types/**/*.ts",
    "src/helpers/**/*.ts"
  ],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
